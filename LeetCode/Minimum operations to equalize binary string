class Solution {
    public int minimumOperations(String s) {
        int count0 = 0;
        int count1 = 0;

        for (char ch : s.toCharArray()) {
            if (ch == '0') {
                count0++;
            } else {
                count1++;
            }
        }

        return Math.min(count0, count1);
    }
}
